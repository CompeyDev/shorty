{
  "name": "shorty",
  "version": "0.1.0",
  "description": "A discord bot to quickly shorten links on a domain of choice.",
  "main": "dist/src/index.js",
  "repository": "https://github.com/CompeyDev/shorty",
  "author": "DevComp <hi@devcomp.xyz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "server:build": "prisma db push && tsc",
    "server:dev": "ts-node-dev src/router/server.ts",
    "server:start": "ts-node src/router/server.ts",
    "server:prod": "node dist/src/router/server.js",
    "server:lint": "prettier --write . && eslint src/ lib/",
    "server:fix": "eslint src/ lib/ --fix",
    "bot:start": "cd src/bot && ts-node src/index.ts",
    "bot:dev": "cd src/bot && ts-node-dev src/index.ts",
    "bot:prod": "node dist/src/index.js",
    "bot:build": "cd src/bot && tsc",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@fastify/static": "^6.9.0",
    "@prisma/client": "^4.10.1",
    "axios": "^1.4.0",
    "discord.js": "^13.8.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.13.0",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  }
}